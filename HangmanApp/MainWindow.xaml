<Window x:Class="HangmanApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HangmanApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,241">
        <TextBlock Name="tbguessDisplay" Text="" FontSize="30" HorizontalAlignment="Center" Margin="0,10,0,-10"/>
        <TextBlock Name="tblives" Text="Lives remaining:" FontSize="30" HorizontalAlignment="Center" Margin="0,51,0,0" TextAlignment="Center" />
        <TextBlock Name="tbguessedLetters" Text="Guessed letters: " FontSize="30" HorizontalAlignment="Center" Margin="0,90,0,0" />
        <TextBlock Name="tbDialogue" Text="Take your guess!" FontSize="30" HorizontalAlignment="Center" Margin="0,120,0,0"/>
        <TextBox Name="tbxGuessInput" HorizontalAlignment="Center" KeyDown="tbxGuessInput_KeyDown" Width="120" Margin="0,203,0,-83" TextAlignment="Center"/>
        <Button Name="btnReset" Click="btnReset_Click" Margin="532,253,187,-138" Content="Play again!" IsEnabled="False" Visibility="Hidden"/>
        <Button Name="btnExit" Click="btnExit_Click" Margin="675,253,44,-138" Content="Exit" IsEnabled="False" Visibility="Hidden"/>
        <TextBlock Name="tbWord" Margin="52,29,139,47" />
    </Grid>
</Window>
