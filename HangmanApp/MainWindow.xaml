<Window x:Class="HangmanApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HangmanApp"
        mc:Ignorable="d"
        Title="Hangman" Height="450" Width="800" MinWidth="300" MinHeight="350">
    <Grid Margin="20">
        
        <Grid.RowDefinitions>
            
            <RowDefinition Height="auto"/>
            
            <RowDefinition Height="80*"/>
            
            <RowDefinition Height="10*"/>
            
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="1">
            
            <Grid.ColumnDefinitions>
                
                <ColumnDefinition Width="2*" />
                
                <ColumnDefinition Width="3*" />
                
            </Grid.ColumnDefinitions>
            
            <Viewbox Grid.Column="1">
                
                <Grid Grid.Column="1">
                    
                    <Grid.RowDefinitions>
                        
                        <RowDefinition Height="Auto"/>

                        <RowDefinition Height="Auto"/>

                        <RowDefinition Height="Auto"/>

                        <RowDefinition Height="Auto"/>

                        <RowDefinition Height="Auto"/>
                        
                    </Grid.RowDefinitions>

                    <TextBlock Name="tbguessDisplay" Grid.Row="0"
                                    Margin="10" 
                                    Text="_ _ _ _" 
                                    FontSize="20" 
                                    HorizontalAlignment="Center" />

                    <TextBlock Name="tblives" Grid.Row="1"
                                   Margin="10" 
                                   Text="Lives remaining:" 
                                   FontSize="20" 
                                   HorizontalAlignment="Stretch" 
                                   TextAlignment="Left"
                               Width="300"/>

                    <TextBlock Name="tbguessedLetters" Grid.Row="2"
                                   Margin="10" 
                                   Text="Guessed letters: " 
                                   FontSize="20" 
                                   HorizontalAlignment="Stretch"
                                    Width="300"/>

                    <TextBlock Name="tbDialogue" Grid.Row="3"
                                   Margin="10" Text="Take your guess!" 
                                   FontSize="20" 
                                   HorizontalAlignment="Stretch" 
                                   TextWrapping="Wrap" 
                                   MinHeight="60" 
                                   Width="300"/>

                    <TextBox Name="tbxGuessInput" Grid.Row="4"
                                 Margin="10" HorizontalAlignment="Center" 
                                 KeyDown="tbxGuessInput_KeyDown" 
                                 Width="120"  
                                 TextAlignment="Center" FontSize="20"/>
                </Grid>
            </Viewbox>
        </Grid>
        <Grid Grid.Row="2" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnReset" Width="70" Click="btnReset_Click" Margin="1" Content="Play again!" IsEnabled="False" FontWeight="Bold"/>
                <Button Name="btnExit" Width="70"  Click="btnExit_Click"   Margin="1" Content="Exit" IsEnabled="False" FontWeight="Bold"/>
            </StackPanel>
        </Grid>






        <TextBlock Name="tbWord"  />
        <TextBlock Name="Header" Text="Hangman" FontSize="40" HorizontalAlignment="Center" FontWeight="Bold"/>
        
    </Grid>
</Window>
